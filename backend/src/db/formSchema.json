{
  "title": "Employee Onboarding Form",
  "description": "Please fill out the following details accurately.",
  "fields": [
    {
      "name": "fullName",
      "label": "Full Name",
      "type": "text",
      "placeholder": "Enter full name",
      "required": true,
      "validations": {
        "minLength": 3,
        "maxLength": 50
      }
    },
    {
      "name": "email",
      "label": "Email Address",
      "type": "text",
      "placeholder": "example@company.com",
      "required": true,
      "validations": {
        "regex": "^[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$"
      }
    },
    {
      "name": "age",
      "label": "Age",
      "type": "number",
      "placeholder": "Enter age",
      "required": true,
      "validations": {
        "min": 18,
        "max": 60
      }
    },
    {
      "name": "department",
      "label": "Department",
      "type": "select",
      "placeholder": "Choose department",
      "required": true,
      "options": [
        "Engineering",
        "Human Resources",
        "Marketing",
        "Finance",
        "Sales"
      ]
    },
    {
      "name": "skills",
      "label": "Skills",
      "type": "multi-select",
      "placeholder": "Select skills",
      "required": true,
      "options": [
        "JavaScript",
        "Python",
        "UI/UX",
        "Project Management",
        "Communication"
      ],
      "validations": {
        "minSelected": 1,
        "maxSelected": 5
      }
    },
    {
      "name": "joiningDate",
      "label": "Joining Date",
      "type": "date",
      "required": true,
      "validations": {
        "minDate": "2024-01-01"
      }
    },
    {
      "name": "address",
      "label": "Address",
      "type": "textarea",
      "placeholder": "Enter full address",
      "required": false,
      "validations": {
        "maxLength": 200
      }
    },
    {
      "name": "relocationRequired",
      "label": "Relocation Required",
      "type": "switch",
      "required": true
    }
  ]
}
